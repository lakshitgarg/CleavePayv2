<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hp.cleavepaylogin.NavigationActivity"
    tools:showIn="@layout/app_bar_navigation">

    <Button
        android:id="@+id/btnGroup"
        android:layout_width="395dp"
        android:layout_height="100dp"
        android:text="Create Group"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="58dp"
        android:layout_above="@+id/btnAddbill"
        android:layout_alignLeft="@+id/btnAddbill"
        android:layout_alignStart="@+id/btnAddbill"
        android:layout_marginBottom="34dp" />

    <Button
        android:id="@+id/btnAddbill"
        android:layout_width="395dp"
        android:layout_height="100dp"
        android:text="Add Bill"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="212dp"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/btnViewdebt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnViewdebt"
        android:layout_width="395dp"
        android:layout_height="100dp"
        android:text="View Debt"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="369dp"
        android:layout_marginBottom="131dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
